<div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">

<h2>Connexion</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<!-- https://www.w3schools.com/bootstrap/bootstrap_forms.asp : form-group permet de regrouper les divs input d'un formulaire bootstrap -->
  <div class="form-group">
<!-- https://www.w3schools.com/tags/att_input_autofocus.asp : autofocus permet de se centrer sur l'input, form-control est la classe Ã  mettre pour bootstrap -->
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Adresse e-mail" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Mot de passe" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %> Se souvenir de moi
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Connexion", class: "btn btn-primary" %>
  </div>
<% end %>

    </div>
</div>
